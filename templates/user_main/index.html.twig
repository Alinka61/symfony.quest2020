{% extends '/user_main/base_user.html.twig' %}

{% block title %}Temporal Games!{% endblock %}

{% block body %}
<div class="wrapper">
    <header id="header">
        <div class="content">
            <a href="{{ asset('user/main') }}" class="logo_icon"><img src="{{ asset('public/assets/images/logo_icon.svg') }}" alt="Temporal Games"></a>
            <ul class="menu">
                <li><a href="#about" onclick="event.preventDefault();doScrolling('about', 500, this)" id="about_link">About</a></li>
                <li><a href="#fluxcortex" onclick="event.preventDefault();doScrolling('fluxcortex', this)" id="fluxcortex_link">fluxCortex</a></li>
                <li><a href="#fluxneat" onclick="event.preventDefault();doScrolling('fluxneat', this)" id="fluxneat_link">fluxNEAT</a></li>
                <li><a href="#riflecore" onclick="event.preventDefault();doScrolling('riflecore', this)" id="riflecore_link">Riflecore</a></li>
                <li><a href="#jobs" onclick="event.preventDefault();doScrolling('jobs', 500, this)" id="jobs_link">Jobs</a></li>
                <li><a href="#contacts" onclick="event.preventDefault();doScrolling('contacts', this)" id="contacts_link">Contacts</a></li>
            </ul>
        </div>
    </header>
    <div id="about">
        <div class="content">
            <h1 class="heading_mobile">Game Development, AI&nbsp;Research &&nbsp;Deployment</h1>
        </div>
        <div class="banner" style="background-image:url('{{ asset('/public/assets/images/banner_1.jpg') }}')">
            <h1>Game Development,<br>AI&nbsp;Research &&nbsp;Deployment</h1>
            <img src="{{ asset('public/assets/images/logo_main.svg') }}" alt="Temporal Games" class="logo_main">
        </div>
        <div class="content">
            <div class="quote">
                <h3>Evolving AI has untapped potential for bringing engaging interactions with virtual characters. At every step of the way we find new opportunities for applying our stack to new fields within games, social and entertainment products.</h3>
                <p><a href="#jobs" onclick="event.preventDefault();doScrolling('jobs', this)" id="jobs_inner_link">Join us <span class="arrow">&darr;</span></a></p>
            </div>
        </div>
    </div>
    <div class="items">

        <div class="content">
            <div class="line"></div>
            {% for product in products %}
                <div class="item" id="{{ product.name }}">
                    <div class="item_left">
                        <div class="item_left_heading">
                            <h2 class="item_left_first_heading">0{{ product.id }}</h2>
                            <h2>{{ product.name }}</h2>
                        </div>
                        <div class="tags">{{ product.tags }}</p></div>
                    </div>
                    <div class="item_right">
                        <p>
                            {{ product.description }}
                        </p>
                    </div>
                </div>
            {% else %}
                <div>
                    <div>no records found</div>
                </div>
            {% endfor %}
        </div>
    </div>
    <!-- DUBLICATE JOBS IN BOTH SECTIONS (COLUMNS AND SLIDER) -->
    <div class="jobs" id="jobs">
        <div class="content">
            <p class="heading">Join us</p>
            <div class="swiper-container">
                <div class="swiper-wrapper">
                    {% for vacancy in vacancies %}
                        <div class="job_list_item swiper-slide">
                            <h3>{{ vacancy.name }}</h3>
                            <p>{{ vacancy.annotation }}</p>
                            <p><a href="{{ vacancy.link }}">View more <span class="arrow">&rarr;</span></a></p>
                        </div>
                    {% else %}
                        <div class="job_list_item swiper-slide">
                            <div>no records found</div>
                        </div>
                    {% endfor %}
                </div>
                <div class="swiper-pagination"></div>
            </div>
            <div class="job_list">
                {% for vacancy in vacancies %}
                    <div class="job_list_item">
                        <h3>{{ vacancy.name }}</h3>
                        <p>{{ vacancy.annotation }}</p>
                        <p><a href="{{ vacancy.link }}">View more <span class="arrow">&rarr;</span></a></p>
                    </div>
                {% else %}
                    <div class="job_list_item">
                        <div>no records found</div>
                    </div>
                {% endfor %}

                <div class="job_list_item">
                    <h3>Other</h3>
                    <p>If you donâ€™t see your position listed but you think we can work together, feel free to contact us at <a href="mailto:job@temporal.games" class="mailto">job@temporal.games</a>, include your targeted position in the letter subject.</p>
                </div>
            </div>
        </div>
    </div>
    <div id="contacts"></div>
    <div class="contacts">
        <div class="content">
            <p class="heading">Get in touch</p>
            <h3 id="delivery">The message has been sent, thank you.</h3>
            <form id="form" onsubmit="submitForm(event)">
                <input type="text" name="name" placeholder="Name" id="name" onfocus="focusIn(this)" onfocusout="focusOut(this, 'Name')">
                <input type="text" name="email" placeholder="E-mail" id="email" onfocus="focusIn(this)" onfocusout="focusOut(this, 'E-mail')">
                <textarea type="text" name="message" placeholder="Message" id="message" onfocus="focusIn(this)" onfocusout="focusOut(this, 'Message')" maxlength="500"></textarea>
                <input type="submit" value="Send message" class="submit">
            </form>
        </div>
    </div>
    <div class="content">
        <footer>
            <p class="footer_left">Temporal Games 2020</p>
            <p class="footer_middle"><a href="mailto:contact@temporal.games">contact@temporal.games</a></p>
            <p class="footer_right"><a href="https://www.facebook.com/temporalgames" target="_blank" rel="noopener">Facebook</a><a href="https://twitter.com/temporal_games" target="_blank"rel="noopener">Twitter</a><a href="https://vk.com/temporalgames" target="_blank"rel="noopener">VK</a><a href="https://www.youtube.com/c/temporalgames" target="_blank"rel="noopener">YouTube</a><a href="https://discord.gg/RFWQ6K7" target="_blank"rel="noopener">Discord</a></p>
        </footer>
    </div>
</div>
{% endblock %}
